<div class="container">
  <div class="row">
   <div class="col-sm-8">

  <div class="ui segment">
    <h3>Conversations</h3>
    <div class="ui list">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <div class="item">
          <%= link_to recipient.first_name + " " + recipient.last_name, conversation_messages_path(conversation)%>
          <%= link_to "Delete", conversation_path(conversation), class: "btn btn-primary btn-lg", method: :delete,
          data: { confirm: "Are you sure you want to delete conversation?" } %>
        </div>
      <% end %>
    </div>
  </div>
 <div class="ui segment">
    <h3>All Users</h3>
      <div class="ui list">
        <% @users.each do |user| %>
          <% if user.id != current_user.id %>
        <div class="item">
          <%= user.first_name + " " + user.last_name %> <%= link_to 'Message me!', conversations_path(sender_id: current_user.id,recipient_id: user.id), method: 'post'%>
        </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
</div>
</div>
<br>
