<!-- Page Content -->
<div class="container">
  <div class="row">
   <div class="col-sm-4">
    <h2 class="mt-4">Summary:</h2>
    <ul>
      <li>Location: <%= @project[:location] %></li>
      <li>Duration: 2h</li>
      <li>Price: <%= @project[:price] %></li>
      <li>Review in stars</li>
    </ul>

  </div>
  <div class="col-sm-8">
    <h2 class="mt-4">Description:</h2>
    <p><%= @project[:description] %></p>

      <% if current_user = @project.user %>
    <p>
      <%= link_to "Edit", edit_project_path(@project), class: "btn btn-primary btn-lg" %>
      <%= link_to "Delete", project_path(@project), class: "btn btn-primary btn-lg", method: :delete,
        data: { confirm: "Are you sure?" } %></p>
      <% else %>
        <p><%= link_to "Book Now", new_project_booking_path(@project) , class: "btn btn-primary btn-lg" %></p>

      <% end %>
      <p><%= link_to "Back to projects", projects_path %></p>

      </div>

    </div>
  </div>







